cd `dirname $0`

echo " running raspi.img using qemu "
echo " you can no longer use this shell "


echo " replacing fstab and ld.so.preload for qemu "

./box-mount

sudo cp root/etc/fstab.qemu         root/etc/fstab
sudo cp root/etc/ld.so.preload.qemu root/etc/ld.so.preload

./box-umount


qemu-system-arm -kernel kernel-qemu -cpu arm1176 -m 256 -M versatilepb -no-reboot -append "root=/dev/sda2 panic=1 console=ttyAMA0" -drive file=raspi.img,index=0,media=disk,format=raw -nic user,hostfwd=tcp::5522-:22 -nographic
